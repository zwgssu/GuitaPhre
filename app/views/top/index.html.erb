<div class="bg-white p-3">
<% unless user_signed_in? %>
<div class="border rounded-3 p-3" style="background-color:lightblue;">
  <%= link_to "会員登録", new_user_registration_path %>してギターフレーズを投稿しませんか？ =>もしくは<%= link_to "ログイン", new_user_session_path %>
</div>
<% end %>

<p class="title mt-3 mb-3">人気のフレーズ</p>

<div class="row">
  <% @phrases.first(4).each do |phrase| %>
    <div class="col-sm-6 mb-5">
      <div class="text-center">
      <%= fav_user_only_link?(phrase, phrase.title) %>
      
      <p class="text-muted"><%= phrase.created_at.strftime("%Y-%m-%d %H:%M") %></p>
      </div>
      <div class="d-flex justify-content-center mb-2">
        <%= fav_user_only?(phrase)%>
      </div>
      <div class="d-flex justify-content-center">[投稿者]<%= link_to phrase.user.username, user_path(phrase.user), class: "me-1 text-dark" %> good(<%= phrase.likers.count %>)</div>
    </div>
  <% end %>
</div>

<%= link_to "全てのフレーズを見る", phrases_path, class: "d-flex justify-content-end" %>
<p class="title mt-3 mb-3">テーマ</p>

<div class="row">
  <% @themes.each do |theme| %>
    <div class="col-sm-6 mb-5">
      <div class="text-center">
      <%= link_to theme.title, theme_path(theme) %>
      
      <p class="text-muted"><%= theme.created_at.strftime("%Y-%m-%d %H:%M") %></p>
      </div>
      <div class="d-flex justify-content-center mb-2">
        <%= audio_tag url_for(theme.music_file), controls: true, controlslist: "nodownload" %>
      </div>
      <div class="d-flex justify-content-center">[投稿者]<%= link_to theme.user.username, user_path(theme.user) %></div>
    </div>
  <% end %>
</div>

<%= link_to "全てのテーマを見る", root_path, class: "d-flex justify-content-end" %>
<p class="title mt-3 mb-3">タグ</p>
    <% @random.each do |p| %>
      <% if p.tag_1.present? %>
        <%= link_to p.tag_1, search_path(search: {model: "phrase", value: p.tag_1}), class: "d-inline-block btn btn-secondary btn-sm text-white text-decoration-none" %>
      <% end %>
      <% if p.tag_2.present? %>
        <%= link_to p.tag_2, search_path(search: {model: "phrase", value: p.tag_2}), class: "d-inline-block btn btn-secondary btn-sm text-white text-decoration-none" %>
      <% end %>
      <% if p.tag_3.present? %>
        <%= link_to p.tag_3, search_path(search: {model: "phrase", value: p.tag_3}), class: "d-inline-block btn btn-secondary btn-sm text-white text-decoration-none" %>
      <% end %>
    <% end %>
<p class="title mt-3 mb-3">人気のユーザー</p>
<%= render "layouts/user_list", users: @users%>
<%= link_to "全てのユーザーを見る", users_path, class: "d-flex justify-content-end" %>
</div>
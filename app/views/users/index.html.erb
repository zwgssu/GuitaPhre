<% @page_title = "ユーザー一覧" %>
<h1 class="text-center mb-3"><%= @page_title %></h1>

<div class="row">
  <% @users.each do |user| %>
      <div class="col-2 pb-3 mb-3">
        <%= cheak_use_picture(user) %>
      </div>
      <div class="col-2">
        <%= link_to user.username, user_path(user) %><br>
        <%= truncate(user.introduction, length: 50) %>
      </div>
  <% end %>
</div>

  <%= paginate @users %>
<ul class="nav nav-tabs">
 <% if @user == current_user %>
  <li class="nav-item">
    <%= link_to "マイページ", mypage_users_path, class: "nav-link" %>
  </li>
<% end %>
  <li class="nav-item">
  <a href=<%= user_path(@user) %> class="nav-link active">フレーズ(<%= @user.phrases.count %>)</a>
  </li>
  <li class="nav-item">
    <a href=<%= themes_user_path(@user) %> class="nav-link">テーマ(<%= @user.themes.count %>)</a>
  </li>
  <li class="nav-item">
    <a href=<%= favorite_phrases_user_path(@user) %> class="nav-link">お気に入りフレーズ()</a>
  </li>
  <li class="nav-item">
    <a href=<%= favorite_users_user_path(@user) %> class="nav-link">お気に入りユーザー(<%= @user.liking_users.count %>)</a>
  </li>
</ul>
<div class="contaier border-start border-end border-bottom bg-white p-3">

  <% @phrases.each do |f| %>
    <div class="border-bottom">
      <div class="row pt-3 pb-3">
        <div class="col-sm-8">
          <div class="row">
            <div class="col-3 d-flex justify-content-center align-items-center">
              <%= cheak_use_picture(f.user, "124x124") %>
            </div>
            <div class="col-9">
              <div class="mb-2">
                <%= link_to f.user.username, user_path(f.user), class: "text-dark" %> <%= f.created_at.strftime("%Y-%m-%d %H:%M")%>
              </div>
              <div class="pt-3 pb-3">
                <h3><%= link_to f.title, phrase_path(f), class: "text-dark d-block p-3" %></h3>
              </div>
              <div>
                <u><%= f.tag_1 %></u> <u><%= f.tag_2 %></u> <u><%= f.tag_3 %></u>
              </div>
              <div>
                <%= link_to "詳しく見る", phrase_path(f), class: "text-dark" %> good()
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-4 d-flex align-items-center">
        <% if user_signed_in? %>
          <%= audio_tag url_for(f.music_file), controls: true, controlslist: "nodownload" %>
        <% else %>
          favユーザー限定フレーズ
        <% end %>
        </div>
      </div>
    </div>
  <% end %>

</div>

<div class="question-index">
  <%= paginate @phrases, remote: true %>
</div>
  <% @page_title = @phrase.title %>
  
  <div class="row">
  <div class="col-sm-2">
    <%= render "phrase_side" %>
  </div>

  <div class="col-sm-10">

    <div class="rounded bg-white w-100 pt-3 pb-3 mb-4">
    <h2 class="d-flex justify-content-center"><%= @phrase.title %></h2></div>
    <% if user_signed_in? %>
    <div class="rounded bg-white p-3 mb-4">
    <div class="d-flex justify-content-start mb-2"><h5><u>フレーズ</u></h5></div>
      <div class="d-flex justify-content-center mb-2">
        <%= audio_tag url_for(@phrase.music_file), controls: true, controlslist: "nodownload" %>
      </div>
      <div class="d-flex justify-content-center">
        <% unless user_signed_in? %>
          <p><%= link_to "会員登録", new_user_registration_path %>してフレーズをダウンロード</p>
        <% else %>
          <%= link_to "ダウンロード", rails_blob_path(@phrase.music_file), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>


      
    <div class="rounded bg-white p-3 mb-4">
      <div class="d-flex justify-content-start mb-2"><h5><u>投稿者コメント</u></h5></div>

      <div class="mb-3 p-2"><%= simple_format(@phrase.body) %></div>
      

      <div class="p-2">
        タグ：<%= @phrase.tag_1 %> <%= @phrase.tag_2 %> <%= @phrase.tag_3 %>
      </div>
      <div class="d-flex justify-content-end p-2">
      <% if current_user == @phrase.user %>
        <%= link_to image_tag("pencil-square.svg", alt: "edit"), edit_phrase_path(@phrase), class: "me-2" %>
        <%= link_to image_tag("trash.svg", alt: "delete"), @phrase, method: :delete, data: { confirm: "フレーズを削除しますか？" } %>
      <% end %>
        <%= @phrase.created_at.strftime("%Y-%m-%d %H:%M") %>
        
        <div id="good_buttons_<%= @phrase.id %>">
          <%= render "favorite_phrases/good", phrase: @phrase %>
        </div>
      </div>
    </div>

    <div class="rounded bg-white p-3 mb-4">
      <div class="d-flex justify-content-start mb-2"><h5><u>コメント</u></h5></div>
    </div>

<% else %>
    <div class="rounded bg-white p-3 mb-4">
      <div class="d-flex justify-content-center mt-4 mb-4"><h5>※<%= @phrase.user.username %>をfavすることで閲覧できます。</h5></div>
    </div>
<% end %>
  </div>
</div>
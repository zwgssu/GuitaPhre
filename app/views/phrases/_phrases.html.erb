<% phrases.each do |f| %>
<div class="border-bottom">
  <div class="row pt-3 pb-3">
    <div class="col-sm-8">
      <div class="row">
        <div class="col-3">
          <%= cheak_use_picture(f.user) %>
        </div>
        <div class="col-9">
          <div class="mb-2">
            <%= link_to f.user.username, user_path(f.user) %> <%= f.created_at.strftime("%Y-%m-%d %H:%M")%>
          </div>
          <a class="text-decoration-none text-dark" href=<%= phrase_path(f) %>>
          <div class="pt-3 pb-3">
            <%= f.title %>
          </div>
          <div>
            <u><%= f.tag_1 %></u> <u><%= f.tag_2 %></u> <u><%= f.tag_3 %></u>
          </div>
          <div>
            <u>詳しく見る</u> good()
          </div>
          </a>
        </div>
      </div>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
    <% if user_signed_in? %>
      <%= audio_tag url_for(f.music_file), controls: true, controlslist: "nodownload" %>
    <% else %>
      favユーザー限定フレーズ
    <% end %>
    </div>
  </div>
</div>
<% end %>
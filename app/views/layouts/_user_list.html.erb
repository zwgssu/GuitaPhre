<div class="row p-3">
  <% users.each do |user| %>
    <div class="col-md-6 mb-4">
      <div class="row">
          <div class="col-3 d-flex justify-content-end">
            <%= cheak_use_picture(user, "64x64") %>
          </div>
          <div class="col-9">
            <%= link_to user.username, user_path(user) %>　Fav!(<%= user.likers.count %>)<br>
            <% if user.introduction.present? %>
              <%= truncate(user.introduction, length: 40) %>
            <% else %>
              自己紹介はありません。
            <% end %>
          </div>
      </div>
    </div>
  <% end %>
</div>
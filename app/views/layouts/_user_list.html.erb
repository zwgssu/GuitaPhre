<div class="row p-3">
  <% users.each do |user| %>
    <div class="col-sm-6 mb-4">
      <div class="d-inline-block">
        <%= cheak_use_picture(user, "64x64") %>
      </div>
      <div class="d-inline-block">
        <%= link_to user.username, user_path(user) %><br>
        <% if user.introduction.present? %>
          <%= truncate(user.introduction, length: 50) %>
        <% else %>
          自己紹介はありません。
        <% end %>
      </div>
    </div>
  <% end %>
</div>